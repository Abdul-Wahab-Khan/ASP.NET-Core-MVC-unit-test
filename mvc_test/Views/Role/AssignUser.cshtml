@model mvc_test.Models.Roles.UserRoleViewModel

@{
    Layout = "_Layout";
}

<form action="" method="post">
    <input type="hidden" asp-for="RoleId" class="form-control" />
    <div class="form-group">
        <label asp-for="UserId"></label>
        <select asp-for="UserId"  class="form-control" asp-items="@(new SelectList(Model.NotAssignedUsers, "Id", "UserName"))" >
            <option>Select User</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-secondary" />
    </div>
</form>

<div class="alert-light">
    @foreach (var user in Model.AssignedUsers)
    {
        <h3>@user.UserName</h3>
    }
</div>